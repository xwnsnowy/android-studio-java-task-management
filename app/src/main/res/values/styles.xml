<resources>
    <style name="BaseTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TitleTextView" parent="BaseTextView">
        <item name="android:textSize">42sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="SubTitleTextView" parent="BaseTextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ButtonStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@drawable/custom_button_background</item>
    </style>

    <style name="ButtonLoginRegister" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="ButtonBack" >
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/back_button</item>
        <item name="android:contentDescription">@string/back_button_description</item>
<!--        <item name="android:background">@drawable/rounded_button_back</item>-->
    </style>

</resources>
