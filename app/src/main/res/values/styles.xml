<resources>
    <style name="BaseTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TitleTextView" parent="BaseTextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="SubTitleTextView" parent="BaseTextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ButtonStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/primaryBackgroundColor</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@drawable/custom_button_background</item>
    </style>

    <style name="ButtonAddTask" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/custom_button_addtask_bg</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="ButtonLoginRegister" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="ButtonBack" >
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/baseline_arrow_back_24</item>
        <item name="android:contentDescription">@string/back_button_description</item>
<!--        <item name="android:background">@drawable/rounded_button_back</item>-->
    </style>

    <style name="TabTextAppearance">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabTextAppearanceSelected">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
