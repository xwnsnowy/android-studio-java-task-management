<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Task Icon/Image -->
    <ImageView
        android:id="@+id/task_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/task_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sun" />

    <!-- Task Name -->
    <TextView
        android:id="@+id/task_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Task Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#333"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toEndOf="@id/task_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Task Description -->
    <TextView
        android:id="@+id/task_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Task Description"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#666"
        app:layout_constraintStart_toEndOf="@id/task_icon"
        app:layout_constraintTop_toBottomOf="@id/task_name"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Task State -->
    <TextView
        android:id="@+id/task_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In Progress"
        android:textColor="#FF4081"
        android:background="@drawable/state_background"
        android:padding="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/task_icon"
        app:layout_constraintTop_toBottomOf="@id/task_description" />

    <!-- Task Date -->
    <TextView
        android:id="@+id/task_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Date: 2024-12-25"
        android:textColor="#666"
        app:layout_constraintStart_toEndOf="@id/task_icon"
        app:layout_constraintTop_toBottomOf="@id/task_state" />

    <!-- Task Estimated Duration -->
    <TextView
        android:id="@+id/task_estimated_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Est. Duration: 2 hours"
        android:textColor="#666"
        app:layout_constraintStart_toEndOf="@id/task_icon"
        app:layout_constraintTop_toBottomOf="@id/task_date" />

    <!-- Task Project -->
    <TextView
        android:id="@+id/task_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project: Task Management App"
        android:textColor="#666"
        app:layout_constraintStart_toEndOf="@id/task_icon"
        app:layout_constraintTop_toBottomOf="@id/task_estimated_duration" />

</androidx.constraintlayout.widget.ConstraintLayout>
